<h1>Edit <%= @song.name %></h1>
<form method="POST" action="/songs/<%= @song.slug %>">
<input type="hidden" name="_method" value="patch">
<label for="name">Name</label>
<input type="text" id="Name" name="song[name]" value="<%= @song.name %>"> <br>

<label>Artist Name</label>
<input type="text" id="Artist Name" name="artist[name]" value="<%= @song.artist.name %>"><br>

<label>Genre</label>
<% Genre.all.each do |g| %>

<input type='checkbox' id="<%= g.name %>" name="genres[]" value="<%= g.id %>" <%= "checked" if @song.genres.include?(g) %>><%= g.name %>
<% end %>
<br>

<input type="submit" value="Save">
</form>